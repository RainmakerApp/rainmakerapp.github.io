doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title Rainmaker Documentation
    script(src='./bower_components/jquery/dist/jquery.min.js', type='text/javascript')
    script(src='./bower_components/flatdoc/legacy.js', type='text/javascript')
    script(src='./bower_components/flatdoc/flatdoc.js', type='text/javascript')
    link(href='./bower_components/flatdoc/theme-white/style.css', rel='stylesheet', type='text/css')
    link(href='./css/main.css', rel='stylesheet', type='text/css')
    script(src='./bower_components/flatdoc/theme-white/script.js', type='text/javascript')
    style(type='text/css').
      .content pre > code {
          letter-spacing: normal;
      }
      .content code {
          font-size: 0.85em;
      }
      .content blockquote {
          font-family: "FF Tisa Pro", "Georgia", serif;
          /*font-size: 14px;*/
          
          font-style: italic;
          color: #b34a23;
      }
      .content-root {
        margin: 0 auto;
        max-width: 1090px;
        box-sizing: border-box;
      }
      header#home {
        min-height:109px;
      }
      .menubar {

        left:auto;
        margin-left: -240px;
        padding: 30px 20px;
        box-sizing: border-box;
      }
      .content {
      max-width:none;
      }
      .menubar > ul li.active a {
      font-weight:bold;
      color: #465064;
      }
    block head
  body.no-literate.large-brief(role='flatdoc')
    header#home
      .navbar
        h1.navbar-brand(style="margin-top: 15px;")
          a(href='http://www.rainmakerapp.com/')
            img(alt='Rainmaker Logo', src='./images/rainmaker_inverse.png', height='25px')
        ul.nav.black.desktop
          li
            a(href='http://www.rainmakerapp.com/features') Features
          li
            a.active(href='./index.html') Developers
          li
            a#login(href='javascript:alert("Please see your account welcome email for your access instructions.")') Login
          li
            a#freeTrial(href='http://www.rainmakerapp.com/sign-up') Start Free Trial
        ul.nav.inverse.mobile
          li
            a#mobileMenu(href='#')
              i.navToggle
                span
    div.content-root
      div.menubar.section

        ul(style="margin-bottom:20px;font-size:14px")
          li(class=active=='index' && 'active' || ''): a(href='index.html') Getting Started
          li(class=active=='theming' && 'active' || ''): a(href='theming.html') Theme Development
          //- li(class=active=='widget' && 'active' || ''): a(href='widget.html') Widget
          //- li(class=active=='plugins' && 'active' || ''): a(href='plugins.html') Plugins
          //- li: a(href='api.html') API Reference
        .menu(role='flatdoc-menu')
      div.content(role='flatdoc-content')
